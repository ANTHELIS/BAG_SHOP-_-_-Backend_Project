<%- include('./partials/headerOwner') %>
    <% if(success.length>0){ %>
        <div class="fixed top-24 left-1/2 -translate-x-1/2 z-50 p-4 rounded-lg bg-green-500 shadow-lg animate-bounce">
            <span class="inline-block text-white font-medium">
                <%= success %>
            </span>
        </div>
        <% } %>

            <div class="min-h-screen bg-gray-50 pt-24 pb-10 px-4 sm:px-10 flex justify-center">
                <div class="w-full max-w-4xl bg-white rounded-2xl shadow-lg overflow-hidden">
                    <div class="bg-gray-900 px-8 py-6 border-b border-gray-800 flex justify-between items-center">
                        <h2 class="text-2xl font-bold text-white">Create New Product</h2>
                        <a href="/owners/admin/products" class="text-gray-400 hover:text-white transition-colors text-sm flex items-center gap-1">
                            <i class="ri-arrow-left-line"></i> Back to Dashboard
                        </a>
                    </div>
                    
                    <form autocomplete="off" action="/products/create" method="post" enctype="multipart/form-data" class="p-8">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                            <!-- Left Column: Product Details -->
                            <div class="space-y-6">
                                <h3 class="text-lg font-semibold text-gray-800 border-b pb-2">Product Information</h3>
                                
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-2">Product Image</label>
                                    <div class="flex items-center justify-center w-full">
                                        <label class="flex flex-col items-center justify-center w-full h-32 border-2 border-gray-300 border-dashed rounded-lg cursor-pointer bg-gray-50 hover:bg-gray-100 transition-colors">
                                            <div class="flex flex-col items-center justify-center pt-5 pb-6">
                                                <i class="ri-upload-cloud-2-line text-3xl text-gray-400 mb-2"></i>
                                                <p class="text-sm text-gray-500"><span class="font-semibold">Click to upload</span> or drag and drop</p>
                                            </div>
                                            <input name="image" type="file" class="hidden" />
                                        </label>
                                    </div>
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Product Name</label>
                                    <input name="name" type="text" placeholder="e.g. Classic Leather Tote"
                                        class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all">
                                </div>

                                <div class="grid grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-1">Price (₹)</label>
                                        <input name="price" type="number" placeholder="0.00"
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all">
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-1">Discount (₹)</label>
                                        <input name="discount" type="number" placeholder="0.00"
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all">
                                    </div>
                                </div>
                            </div>

                            <!-- Right Column: Styling Details -->
                            <div class="space-y-6">
                                <h3 class="text-lg font-semibold text-gray-800 border-b pb-2">Visual Styling</h3>
                                <p class="text-sm text-gray-500 mb-4">Customize how the product card looks in the shop.</p>
                                
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Background Color (Hex)</label>
                                    <div class="flex gap-2">
                                        <input name="bgcolor" type="text" placeholder="#FFFFFF"
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all">
                                        <div class="w-10 h-10 rounded border border-gray-200 bg-white shadow-sm"></div>
                                    </div>
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Panel Color (Hex)</label>
                                    <div class="flex gap-2">
                                        <input name="panelcolor" type="text" placeholder="#F3F4F6"
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all">
                                        <div class="w-10 h-10 rounded border border-gray-200 bg-gray-100 shadow-sm"></div>
                                    </div>
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Text Color (Hex)</label>
                                    <div class="flex gap-2">
                                        <input name="textcolor" type="text" placeholder="#1F2937"
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all">
                                        <div class="w-10 h-10 rounded border border-gray-200 bg-gray-800 shadow-sm"></div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mt-10 pt-6 border-t border-gray-100 flex justify-end">
                            <button class="px-8 py-3 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200" type="submit">
                                Create Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <%- include('./partials/footer') %>