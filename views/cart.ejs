<%- include('./partials/headerShop') %>
    <div class="w-full h-screen flex items-start p-20 justify-between">
        <div class="products flex flex-col w-[30%]">
            <!-- product  -->
            <% user.cart.forEach((product)=>{ %>
                <div class="product w-full mb-10 rounded-md overflow-hidden">
                    <div class="w-full flex justify-center items-center h-60 bg-[<%= product.bgcolor %>]">
                        <img class="h-[15rem]  object-cover" src="data:image/<%=product.imgType%>;base64,<%= product.img.toString('base64') %>" alt="">
                    </div>
                    <div class="w-full flex justify-between bg-[#e9e9e9] px-5 py-4">
                        <h3 class="text-2xl"><%= product.name %></h3>
                        <div class="flex items-center gap-2">
                            <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-add-line"></i>
                            <div class="px-2 py-1 rounded-md bg-white text-black">01</div>
                            <i class="w-7 h-7 bg-white flex rounded-full items-center justify-center ri-subtract-line"></i>
                        </div>
                    </div>
                    <div class="flex items-center bg-[#e9e9e9] justify-between px-5 py-1">
                        <h4 class="text-lg">Acctual Price</h4>
                        <h2 class="text-lg">₹ <%= product.price %></h2>
                    </div>
                    <% if(product.discount !== 0){ %>
                        <div class="flex bg-[#e9e9e9] items-center justify-between px-5 py-1">
                            <h4 class="text-lg">Discount</h4>
                            <h2 class="text-lg">₹ <%= product.discount %></h2>
                        </div>
                    <% } %>
                    <div class="flex bg-[#e9e9e9] items-center justify-between px-5 py-1">
                        <h4 class="text-lg">Net Total</h4>
                        <h2 class="text-lg">₹ <%= product.price - product.discount %></h2>
                    </div>
                </div>
            <% }) %>
        </div>
        <div class="w-[50%] bg-[#f5f5f5] p-5 rounded-xl fixed top-20 right-20">
            <h3 class="text-xl">Price Breakdown</h3>
            <div class="px-10 mt-5">
                <% var totalPrice = 0 %>
                <% var totalDiscount = 0 %>
                <% user.cart.forEach((product)=>{ %>
                    <% totalPrice = totalPrice + product.price %>
                    <% totalDiscount = totalDiscount + product.discount %>
                <% }) %>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Total MRP</h4>
                    <h4>₹ <%= totalPrice %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Discount on MRP</h4>
                    <h4>₹ <%= totalDiscount %></h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Platform Fee</h4>
                    <h4>₹ 20</h4>
                </div>
                <div class="flex mt-2">
                    <h4 class="w-1/3">Shipping Fee</h4>
                    <h4>FREE</h4>
                </div>
            </div>
            <div class="w-full h-[1px] bg-black mt-10"></div>
            <div class="flex mt-5">
                <h3 class="w-1/3 text-xl">Total Amount</h3>
                <h3 class="font-semibold text-xl text-green-600">₹ <%= totalPrice - totalDiscount + 20 %></h3>
            </div>
            <form action=""></form>
        </div>
    </div>
    <%- include('./partials/footer') %>