<%- include('./partials/headerOwner') %>
    
            <div class="min-h-screen bg-gray-50 pt-24 pb-10 px-4 sm:px-10 flex justify-center">
                <div class="w-full max-w-4xl bg-white rounded-2xl shadow-lg overflow-hidden">
                    <div class="bg-gray-900 px-8 py-6 border-b border-gray-800 flex justify-between items-center">
                        <h2 class="text-2xl font-bold text-white">Edit Product</h2>
                        <a href="/owners/admin/products" class="text-gray-400 hover:text-white transition-colors text-sm flex items-center gap-1">
                            <i class="ri-arrow-left-line"></i> Back to Dashboard
                        </a>
                    </div>

                    <form autocomplete="off" action="/products/edit/<%= product._id %>" method="post" class="p-8">
                        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                            <!-- Left Column: Product Details -->
                            <div class="space-y-6">
                                <h3 class="text-lg font-semibold text-gray-800 border-b pb-2">Product Information</h3>
                                
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Product Name</label>
                                    <input name="name" type="text" placeholder="Product Name" value="<%= product.name %>"
                                        class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all">
                                </div>

                                <div class="grid grid-cols-2 gap-4">
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-1">Price (₹)</label>
                                        <input name="price" type="number" placeholder="Product Price" value="<%= product.price %>"
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all">
                                    </div>
                                    <div>
                                        <label class="block text-sm font-medium text-gray-700 mb-1">Discount (₹)</label>
                                        <input name="discount" type="number" placeholder="Discount Price" value="<%= product.discount %>"
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all">
                                    </div>
                                </div>
                            </div>

                            <!-- Right Column: Styling Details -->
                            <div class="space-y-6">
                                <h3 class="text-lg font-semibold text-gray-800 border-b pb-2">Visual Styling</h3>
                                
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Background Color (Hex)</label>
                                    <div class="flex gap-2">
                                        <input name="bgcolor" type="text" placeholder="Background Color" value="<%= product.bgcolor %>"
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all">
                                        <div class="w-10 h-10 rounded border border-gray-200 shadow-sm" style="background-color: <%= product.bgcolor %>;"></div>
                                    </div>
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Panel Color (Hex)</label>
                                    <div class="flex gap-2">
                                        <input name="panelcolor" type="text" placeholder="Panel Color" value="<%= product.panelcolor %>"
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all">
                                        <div class="w-10 h-10 rounded border border-gray-200 shadow-sm" style="background-color: <%= product.panelcolor %>;"></div>
                                    </div>
                                </div>

                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Text Color (Hex)</label>
                                    <div class="flex gap-2">
                                        <input name="textcolor" type="text" placeholder="Text Color" value="<%= product.textcolor %>"
                                            class="w-full px-4 py-2 rounded-lg border border-gray-300 focus:ring-2 focus:ring-blue-500 focus:border-blue-500 outline-none transition-all">
                                        <div class="w-10 h-10 rounded border border-gray-200 shadow-sm" style="background-color: <%= product.textcolor %>;"></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="mt-10 pt-6 border-t border-gray-100 flex justify-end gap-4">
                            <a href="/owners/admin/products" class="px-6 py-3 bg-gray-100 text-gray-700 font-semibold rounded-lg hover:bg-gray-200 transition-colors">
                                Cancel
                            </a>
                            <button class="px-8 py-3 bg-yellow-600 hover:bg-yellow-700 text-white font-semibold rounded-lg shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200" type="submit">
                                Update Product
                            </button>
                        </div>
                    </form>
                </div>
            </div>
            <%- include('./partials/footer') %>