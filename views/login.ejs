<%- include('./partials/header') %>

    <% if(error.length>0){ %>
        <div class="fixed top-24 left-1/2 -translate-x-1/2 z-50 p-4 rounded-lg bg-red-500 shadow-lg animate-bounce">
            <span class="inline-block text-white font-medium">
                <%= error %>
            </span>
        </div>
        <% } %>
            <div class="w-full min-h-screen flex items-center justify-center bg-gray-50 px-4 sm:px-20">
                <div class="w-full max-w-5xl flex bg-white rounded-2xl shadow-2xl overflow-hidden min-h-[600px]">
                    <!-- Left Side - Visuals -->
                    <div class="hidden md:flex w-1/2 bg-gradient-to-br from-blue-600 to-blue-400 p-12 flex-col justify-between relative overflow-hidden">
                        <div class="relative z-10">
                            <h3 class="text-4xl font-bold text-white mb-4">Welcome Back!</h3>
                            <p class="text-blue-100 text-lg">We missed you. Sign in to access your personalized shopping experience.</p>
                        </div>
                        <div class="relative z-10">
                            <p class="text-blue-100 text-sm">© 2026 Baggy Inc.</p>
                        </div>
                        <!-- Decorative circles -->
                        <div class="absolute top-0 right-0 -mr-20 -mt-20 w-64 h-64 rounded-full bg-blue-500 opacity-50 blur-3xl"></div>
                        <div class="absolute bottom-0 left-0 -ml-20 -mb-20 w-64 h-64 rounded-full bg-blue-300 opacity-30 blur-3xl"></div>
                    </div>

                    <!-- Right Side - Form -->
                    <div class="w-full md:w-1/2 p-8 md:p-12 flex flex-col justify-center">
                        <div class="max-w-md mx-auto w-full">
                            <h4 class="text-3xl font-bold text-gray-800 mb-2">Login</h4>
                            <p class="text-gray-500 mb-8">Please enter your details to sign in.</p>
                            
                            <form autocomplete="off" action="/login" method="post" class="space-y-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                                    <input
                                        class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:border-blue-500 focus:bg-white focus:ring-2 focus:ring-blue-200 outline-none transition-all duration-200"
                                        type="email" placeholder="john@example.com" name="email" required>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                                    <input
                                        class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:border-blue-500 focus:bg-white focus:ring-2 focus:ring-blue-200 outline-none transition-all duration-200"
                                        type="password" placeholder="••••••••" name="password" required>
                                </div>
                                
                                <button class="w-full py-3 px-4 bg-blue-600 hover:bg-blue-700 text-white font-semibold rounded-lg shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200 mt-6" type="submit">
                                    Login
                                </button>
                            </form>

                            <div class="mt-8 text-center">
                                <p class="text-gray-600">Don't have an account? <a href="/" class="text-blue-600 font-semibold hover:underline">Sign up</a></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%- include('./partials/footer') %>