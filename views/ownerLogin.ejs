<%- include('./partials/header') %>
    <% if(error.length>0){ %>
            <div class="fixed top-24 left-1/2 -translate-x-1/2 z-50 p-4 rounded-lg bg-red-500 shadow-lg animate-bounce">
                <span class="inline-block text-white font-medium">
                    <%= error %>
                </span>
            </div>
            <% } %>
            <div class="w-full min-h-screen flex items-center justify-center bg-gray-900 px-4 sm:px-20">
                <div class="w-full max-w-5xl flex bg-white rounded-2xl shadow-2xl overflow-hidden min-h-[600px]">
                    <!-- Left Side - Visuals -->
                    <div class="hidden md:flex w-1/2 bg-gray-800 p-12 flex-col justify-between relative overflow-hidden">
                        <div class="relative z-10">
                            <h3 class="text-4xl font-bold text-white mb-4">Owner Portal</h3>
                            <p class="text-gray-400 text-lg">Manage your products, track sales, and grow your business.</p>
                        </div>
                        <div class="relative z-10">
                            <p class="text-gray-500 text-sm">© 2026 Baggy Inc.</p>
                        </div>
                        <!-- Decorative circles -->
                        <div class="absolute top-0 right-0 -mr-20 -mt-20 w-64 h-64 rounded-full bg-gray-700 opacity-50 blur-3xl"></div>
                        <div class="absolute bottom-0 left-0 -ml-20 -mb-20 w-64 h-64 rounded-full bg-black opacity-30 blur-3xl"></div>
                    </div>

                    <!-- Right Side - Form -->
                    <div class="w-full md:w-1/2 p-8 md:p-12 flex flex-col justify-center">
                        <div class="max-w-md mx-auto w-full">
                            <div class="flex items-center gap-2 mb-2">
                                <i class="ri-shield-user-line text-3xl text-gray-800"></i>
                                <h4 class="text-3xl font-bold text-gray-800">Admin Access</h4>
                            </div>
                            <p class="text-gray-500 mb-8">Please enter your credentials to access the dashboard.</p>
                            
                            <form action="/owners/login" method="post" class="space-y-4">
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Email Address</label>
                                    <input class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:border-gray-800 focus:bg-white focus:ring-2 focus:ring-gray-200 outline-none transition-all duration-200"
                                        type="email" placeholder="admin@example.com" name="email" required>
                                </div>
                                <div>
                                    <label class="block text-sm font-medium text-gray-700 mb-1">Password</label>
                                    <input class="w-full px-4 py-3 rounded-lg bg-gray-50 border border-gray-200 focus:border-gray-800 focus:bg-white focus:ring-2 focus:ring-gray-200 outline-none transition-all duration-200"
                                        type="password" placeholder="••••••••" name="password" required>
                                </div>
                                
                                <button class="w-full py-3 px-4 bg-gray-900 hover:bg-black text-white font-semibold rounded-lg shadow-md hover:shadow-lg transform hover:-translate-y-0.5 transition-all duration-200 mt-6" type="submit">
                                    Login to Dashboard
                                </button>
                            </form>
                            
                            <div class="mt-8 text-center">
                                <a href="/" class="text-sm text-gray-500 hover:text-gray-800 transition-colors">← Back to Shop</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <%- include('./partials/footer') %>